<%-include("adminLayout/header.ejs")%>
    <section class="otpform ">
        <div class="container">
            <div class="maincon">
                <% if(locals.err){ %>
                    <input type="hidden" style="display:none;" id="err" value="<%= locals.err %>">
                <% } %>
                <div class="row d-flex justify-content-evenly my-4">
                    <div class="card col-md-6 p-4 officermain ">
                        <h3>ADMIN LOGIN</h3>
                        <div class="formdiv px-4">
                            <form action="/admin" method="post"  id="logform" autocomplete="off">                                
                                <div class="inputdiv my-3">
                                    <label for="email">E-mail</label>
                                    <input type="text" name="email" id="email" class="form-control">
                                    <p class="text-danger" id="emailerr" style="display: none;"></p>
                                </div>
                                <div class="inputdiv my-3">
                                    <label for="password">Password</label>
                                    <input type="password" name="password" id="password" class="form-control">
                                    <p class="text-danger" id="passworderr" style="display: none;"></p>
                                </div>
                                <input type="submit" class="btn form-control my-4" value="LOGIN">
                            </form>
                    </div>
                    
                </div>  

            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
<script src="/public/js/adminLoginScript.js"></script>
</body>
</html>