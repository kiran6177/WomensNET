<%-include("adminLayout/header.ejs")%>
<section class="officerdash mx-5 mx-sm-0">
        <div class="container">
            <div class="maincon">

                <div class="row d-flex justify-content-evenly my-4">
                    <div class="card col-md-10 p-4 officermain ">
                        <h3>ADMIN DASHBOARD</h3>
                        <div class="officerlist">
                            <h5>Officer List</h5>
                            <table class="table table1">
                                <th>Name</th>
                                <th>Mobile</th>
                                <th>Designation</th>
                                <th>Status</th>
                                <th>Action</th>
                                </tr>
                               <% if(officersEnrolled.length > 0){%>
                                   <% officersEnrolled.forEach((officers)=>{%>
                                        <tr>
                                            <td><%=officers.name%></td>
                                            <td><%=officers.mobile%></td>
                                            <td><%=officers.designation%></td>
                                           <% if(officers.isApproved === 1){ %>
                                                <td><span class="text-success">Approved</span></option>
                                                </td>
                                           <% } else { %>
                                            <td><span class="text-danger">Not Approved</span></option>
                                            </td>
                                          <% } %>
                                           
                                            <td><a href="/admin/viewOfficer?oid=<%=officers._id%>">VIEW</a></td>
                                        </tr>
                                   <% })%>
                               <% }%>
                               
                                
                            </table>
                            <table class="table table2" style="display: none;">
                                <% if(officersEnrolled.length > 0){%>
                                    <% officersEnrolled.forEach((officers)=>{%>
                                <tr><th>Name</th><td><%=officers.name%></td></tr>
                                <tr><th>Mobile</th><td><%=officers.mobile%></td></tr>
                                <tr><th>Designation</th><td><%=officers.designation%></td></tr>
                                <tr><th>Status</th>
                                    <% if(officers.isApproved === 1){ %>
                                        <td><span class="text-success">Approved</span></option>
                                        </td>
                                   <% } else { %>
                                    <td><span class="text-danger">Not Approved</span></option>
                                    </td>
                                  <% } %>
                                </tr>
                                <tr><th>Action</th><td><a href="/admin/viewOfficer?oid=<%=officers._id%>">VIEW</a></td></tr>
                                <tr><td></td><td></td></tr>
                                <% })%>
                                <% }%>
                            </table>
                        </div>
                </div>  

            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>
</html>