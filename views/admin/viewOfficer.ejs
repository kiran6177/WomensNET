<%-include("adminLayout/header.ejs")%>

<section class="officerdash mx-4 mx-sm-0">
    <div class="container">
        <div class="maincon">

            <div class="row d-flex justify-content-evenly my-4">
                <div class="card col-md-10 p-4  ">
                   <% if(officerDetail.isApproved == 0){%>
                        <div class="viewoffhead"><h3>ADMIN DASHBOARD</h3> <a  onclick="approve('<%=officerDetail._id%>')"  class="me-4">APPROVE</a></div>

                   <% }%>
                    <div class="officerlist">
                        <h5 class="mt-5">Officer Data</h5>
                        <div class="offimg my-4"><img src="/assets/<%=officerDetail.profileImage%>" width="200px" height="200px" alt=""></div>
                        <h5 class="my-4">Name :<%=officerDetail.name%> </h5>
                        <h6 class="my-3">Designation :<%=officerDetail.designation%> </h6>
                        <h6 class="my-3">Current Working Location : <%=officerDetail.workingLocation%> </h6>
                        <h6 class="my-3">Email : <%=officerDetail.email%> </h6>
                        <h6 class="my-3">Mobile : <%=officerDetail.mobile%> </h6>
                        <h6 class="my-3">ID Proof</h6>

                        <div class="idimg">
                            <%officerDetail.IDProof.forEach((idproof)=>{%>
                                <img src="/assets/<%=idproof%>" width="150px" height="150px" class="my-4" alt="">

                            <%})%>
                            
                        </div>
                        <h6 class="my-3">House No :<%=officerDetail.street%> </h6>
                        <h6 class="my-3">District :<%=officerDetail.district%> </h6>
                        <h6 class="my-3">State :<%=officerDetail.state%> </h6>
                        <h6 class="my-3">Country :<%=officerDetail.country%> </h6>
                        </div>
                    </div>
            </div>  

        </div>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
<script src="/public/js/approveOfficer.js"></script>
</body>
</html>