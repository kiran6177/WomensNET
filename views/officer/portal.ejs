<%-include('layout/header.ejs')  %>
<section class="officerportal mb-5">
    <div class="container">
        <div class="row ">
            <div class="mainportal col-md-12 p-5">
                <h3>OFFICER PORTAL</h3>
                <div class="profile mb-5">
                    <% if(locals.officerDet){ %>
                    <div class="proimg"><img src="/assets/<%= locals.officerDet.profileImage %>" width="200px" height="200px" alt=""></div>
                    <h6>Name : <%= locals.officerDet.name %></h6>
                    <p>Designation : <%= locals.officerDet.designation %></p>
                    <p>E-mail : <%= locals.officerDet.email %> </p>
                    <p>Mobile : <%= locals.officerDet.mobile %></p>
                        <% } %>
                </div>
                <div class="reportlist">
                    <h5>Complaints List</h5>
                    <table class="table">
                        <tr><th>Complaint ID</th>
                        <th>Name</th>
                        <th>Mobile</th>
                        <th>Status</th>
                        <th>Action</th>
                        </tr>
                        <% if(locals.complaintdata && locals.complaintdata.length > 0){ locals.complaintdata.forEach(complaint => { %>
                        <tr>
                            <td>Confidential</td>
                            <td><% if(complaint.reportername){ %><%= complaint.reportername %><% }else{ %>NA<% } %></td>
                            <td><% if(complaint.reportermobile){ %><%= complaint.reportermobile %><% }else{ %>NA<% } %></td>
                            <td><% if(complaint.status === "Approved"){ %><span class="approved1">Approved</span>
                                <% }else if(complaint.status === "Pending"){ %><span class="pending1">Pending</span>
                                <% }else if(complaint.status === "Not Credible"){ %><span class="notcredible1">Not Credible</span>
                                <% }else if(complaint.status === "Closed"){ %><span class="closed1">Closed</span>
                                <% }else if(complaint.status === "Working On It"){ %><span class="working1">Working On It</span>
                                <% }else if(complaint.status === "Suspended"){ %><span class="suspended1">Suspended</span><% } %></td>
                            <td><a href="/officer/viewcomplaint?id=<%= complaint._id %>">VIEW</a></td>
                        </tr>
                        <% })} %>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<%-include('layout/footer.ejs')  %>